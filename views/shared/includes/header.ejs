<header>
  <div><a href="/">WDE</a></div>
  <nav>
    <ul>
      <% if (!locals.isAuth) { %>
        <li><a href="/login">Log In</a></li>
        <li><a href="/signup">Sign Up</a></li>
      <% } %>
      <% if (locals.isAuth) { %>
        <li>
          <form action="/logout" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <button>Logout</button>
          </form>
        </li>
      <% } %>
    </ul>
  </nav>
</header>