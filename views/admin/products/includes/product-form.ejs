<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
      <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= product.title %>" required>
      </p>
      <p>
        <label for="image" <% if (!imageRequired) {%>class="hidden"<%} %>>Image</label>
        <input type="file" <% if (!imageRequired) {%>class="hidden"<%} %> name="image" id="image" accept="image/png, image/jpg" <% if (imageRequired) {%>required<%} %>>
      </p>
      <p>
        <label for="summary">Summary</label>
        <input type="text" name="summary" id="summary" maxlength="250" value="<%= product.summary %>" required>
      </p>
      <p>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.01" step="0.01" value="<%= product.price %>" required>
      </p>
      <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="7" required><%= product.description %></textarea>
      </p>
      <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button type="submit" class="btn">Save</button>
      </p>
    </form>