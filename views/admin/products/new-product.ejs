<%- include('../../shared/includes/head', { pageTitle: 'Add New Product' }) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Add New Product</h1>
    <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
      <p>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" required>
      </p>
      <p>
        <label for="image">Image</label>
        <input type="file" name="image" id="image" accept="image/png, image/jpg">
      </p>
      <p>
        <label for="summery">Summery</label>
        <input type="text" name="summery" id="summery" maxlength="250" required>
      </p>
      <p>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" min="0.01" step="0.01" required>
      </p>
      <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="7" required></textarea>
      </p>
      <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button type="submit" class="btn">Save</button>
      </p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>